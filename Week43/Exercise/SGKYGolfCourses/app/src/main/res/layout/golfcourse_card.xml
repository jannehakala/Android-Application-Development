<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/golfCourseCardView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/golfCourseImageView" />

            <TextView
                android:layout_toRightOf="@+id/golfCourseImageView"
                android:layout_alignParentTop="true"
                android:id="@+id/golfCourseNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

            <TextView
                android:layout_toRightOf="@+id/golfCourseImageView"
                android:layout_below="@id/golfCourseNameTextView"
                android:id="@+id/golfCourseAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:layout_toRightOf="@+id/golfCourseImageView"
                android:layout_below="@id/golfCourseAddressTextView"
                android:id="@+id/golfCoursePhoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:layout_toRightOf="@+id/golfCourseImageView"
                android:layout_below="@id/golfCoursePhoneTextView"
                android:id="@+id/golfCourseEmailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>